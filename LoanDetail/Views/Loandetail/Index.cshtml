@model LoanDetail.Models.Loandetail


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Loan Details</h2>

<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
</div>


<h1>Financial Info !</h1>

@using (Html.BeginForm())
{
<center>
    <div class="form-group">
        @Html.LabelFor(c => c.loan_Type)

        <select class="form-control" id="LoanType" name="LoanType">
            <option>--Select--</option>
            <option>Home Loan</option>
            <option>Travel Loan</option>
            <option>Vechile Loan</option>
            <option>Wedding Loan</option>
        </select>

    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.dAmount)
        @Html.TextBoxFor(c => c.dAmount, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.dIntrest)
        @Html.TextBoxFor(c => c.dIntrest, new { @class = "form-control" })
    </div>



   

    <button type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
        Next
    </button>




</center>

}



