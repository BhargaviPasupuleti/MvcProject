@model LoanDetail.Models.Loandetail

@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />

<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
</div>

<h2>Payment details</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <center>
        <div class="form-group">
            @Html.LabelFor(c => c.sPayment_Type)
            @Html.DropDownListFor(c =>c.sPayment_Type, new List<SelectListItem>
           {
                   
                     new SelectListItem() {Text = "DD", Value="DD"},
                     new SelectListItem() {Text = "EMI", Value="EMI"},
                     new SelectListItem() {Text = "Online Pay", Value="Online Pay"}
           },"--Select--", new { @class = "form-control" })

            @Html.ValidationMessageFor(c => c.sPayment_Type, "", new { @class = "text-danger" })

        </div>



        <div class="form-group">

            @Html.LabelFor(c => c.dApplied_Date )
            @*@Html.TextBoxFor(c => c.Applieddate, "{0:d}", new { @value = DateTime.Today, @readonly = "readonly" })*@
            @Html.TextBox("MockDateCreated", DateTime.Today, new { @disabled = "disabled", @class = "form-control" })
            @Html.ValidationMessageFor(c => c.dApplied_Date, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.iDuration)
            @Html.DropDownListFor(m => m.iDuration, Enumerable.Range(4, 38).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }),"--select--", new { @class = "form-control" })
            @*@Html.DropDownListFor(c =>c.iDuration, new List<SelectListItem>
        {
                  new SelectListItem() {Text = "1 Year", Value="1 Year"},
                  new SelectListItem() {Text = "2 Year", Value="2 Year"},
                  new SelectListItem() {Text = "3 Year", Value="3 Year"}
        },"--Select--", new { @class = "form-control" })*@

            @Html.ValidationMessageFor(c => c.dApplied_Date, "", new { @class = "text-danger" })

        </div>

        <button type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
            Next
        </button>

    </center>







}

